@model Parcial3_BedoyaSamuel.DAL.Entities.VehicleDetails

@{
    ViewData["Title"] = "Editar Servicio";
}

<h1>Editar servicio</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProcessService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreationDate" />
            <input type="hidden" asp-for="Vehicle.Services.Price" />

            <div class="form-group">
                <label asp-for="Vehicle.NumberPlate" class="control-label"></label>
                <input asp-for="Vehicle.NumberPlate" class="form-control" readonly />
                <span asp-validation-for="Vehicle.NumberPlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Owner" class="control-label"></label>
                <input asp-for="Vehicle.Owner" class="form-control" readonly />
                <span asp-validation-for="Vehicle.Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Services.Name" class="control-label"></label>
                <input asp-for="Vehicle.Services.Name" class="form-control" readonly />
                <span asp-validation-for="Vehicle.Services.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" asp-route-vehicleDetailId="@Model.Id" class="btn btn-outline-primary" />
                <a asp-action="ProcessService" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
